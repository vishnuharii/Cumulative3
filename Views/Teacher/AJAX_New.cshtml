    <input type="text" id="EmployeeNumber" name="EmployeeNumber" />
</div>
<div>
    <label for="Salary">Salary: </label>
    <input type="text" id="Salary" name="Salary" />
</div>
<div>
    <button onclick="AddTeacher();">Insert into Database</button>
</div>

<script>

    function AddTeacher() {
        var URL = "http://localhost:61041/api/TeacherData/CreateTeacher";

        var xhr = new XMLHttpRequest();

        var TeacherFname = document.getElementById("TeacherFname").value;
        var TeacherLname = document.getElementById("TeacherLname").value;
        var EmployeeNumber = document.getElementById("EmployeeNumber").value;
        var Salary = document.getElementById("Salary").value;

        /*Insert format will be JSON */

        var NewTeacher = {
            "TeacherFname": TeacherFname,
            "TeacherLname": TeacherLname,
            "EmployeeNumber": EmployeeNumber,
            "Salary": Salary
        };


        xhr.onreadystatechange = function () {
            if (xhr.readyState == 4 && xhr.status == 200) {

            }
        };

        xhr.open("POST", URL, true);
        xhr.setRequestHeader("Content-Type", "application/json");
        xhr.send(JSON.stringify(NewTeacher));
    }

</script>
